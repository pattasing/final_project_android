<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddbc95"
    tools:context="kmitl.playstory.pattasing.playstory.controller.PlayActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/label_bar_play"
        android:layout_width="435dp"
        android:layout_height="46dp"
        android:background="#626D71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/datePlay"
        android:layout_width="255dp"
        android:layout_height="43dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/waffle_regular"
        android:gravity="center|left"
        android:text="Date"
        android:textColor="#ddbc95"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@+id/label_bar_play"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listInPlay"
        android:layout_width="328dp"
        android:layout_height="388dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_bar_play">

    </android.support.v7.widget.RecyclerView>

    <android.support.v4.view.ViewPager
        android:id="@+id/label_bar_low_play"
        android:layout_width="492dp"
        android:layout_height="40dp"
        android:background="#626D71"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textBack"
        android:layout_width="182dp"
        android:layout_height="40dp"
        android:layout_marginEnd="88dp"
        android:background="@drawable/border_image"
        android:fontFamily="@font/waffle_regular"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Back"
        android:textColor="#f1f3ce"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textSaveDate"
        app:layout_constraintTop_toTopOf="@+id/label_bar_low_play" />

</android.support.constraint.ConstraintLayout>
